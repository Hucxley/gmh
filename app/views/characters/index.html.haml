%h1 Listing characters

%table
  %tr
    %th Name
    %th Initiative
    %th
    %th
    %th

  - @characters.each do |character|
    %tr
      %td= character.name
      %td= character.initiative
      %td= link_to 'Show', campaign_character_path(@campaign, character)
      %td= link_to 'Edit', edit_campaign_character_path(@campaign, character)
      %td= link_to 'Destroy', campaign_character_path(@campaign, character), :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New character', new_campaign_character_path
= link_to 'Back to campaigns', campaigns_path
